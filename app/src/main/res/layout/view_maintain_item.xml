<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/maintain_top_gap_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/maintain_item_order_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/maintain_order_number"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:textSize="@dimen/font_14"
        android:layout_below="@id/maintain_top_gap_view"
        android:textColor="@color/colorMaintainNum"/>
    <TextView
        android:id="@+id/maintain_item_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/maintain_date"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:textSize="@dimen/font_14"
        android:layout_below="@id/maintain_top_gap_view"
        android:textColor="@color/colorMaintainNum"/>
    <RelativeLayout
        android:id="@+id/maintain_item_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/maintain_item_date_tv"
        >
        <ImageView
            android:id="@+id/maintain_item_dot_img"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/icon_dot"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/maintain_item_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            tools:text="有问题"
            android:background="@drawable/bg_maintain_status"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_14"/>

        <TextView
            android:id="@+id/maintain_item_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="你好啊速度速度十分发达的方式是范德萨的发生"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@id/maintain_item_dot_img"
            android:lines="1"
            android:layout_toLeftOf="@id/maintain_item_status_tv"
            android:ellipsize="end"
            android:textSize="@dimen/font_16"
            android:layout_centerVertical="true"
            android:textColor="@color/colorLoginTxt"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/maintain_item_bottom_rl"
        android:background="@color/colorLine"/>
</RelativeLayout>
