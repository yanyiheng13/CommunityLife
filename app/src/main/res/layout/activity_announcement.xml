<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.community.life.ui.view.WithBackTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:background="@color/main_bg">
        <RelativeLayout
            android:id="@+id/announcement_system_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/announcement_system_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2e2e2e"
                android:textSize="16sp"
                android:text="@string/system_announcement"
                />
            <View
                android:id="@+id/announcement_system_view"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_below="@id/announcement_system_tv"
                android:layout_alignLeft="@id/announcement_system_tv"
                android:layout_alignRight="@id/announcement_system_tv"
                android:layout_marginTop="3dp"
                android:background="@color/colorWeChatLoginBg"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/announcement_community_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/announcement_community_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2e2e2e"
                android:textSize="16sp"
                android:text="@string/community_announcement"
                />
            <View
                android:id="@+id/announcement_community_view"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_below="@id/announcement_community_tv"
                android:layout_alignLeft="@id/announcement_community_tv"
                android:layout_alignRight="@id/announcement_community_tv"
                android:layout_marginTop="3dp"
                android:visibility="gone"
                android:background="@color/colorWeChatLoginBg"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />
</LinearLayout>
