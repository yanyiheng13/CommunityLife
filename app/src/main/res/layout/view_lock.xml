<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_announcement_lock_bg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:src="@mipmap/icon_lock" />

        <ImageView
            android:id="@+id/home_announcement_lock_circle"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/key_loading_25" />

        <ImageView
            android:id="@+id/home_announcement_lock_status"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_state_one" />
    </RelativeLayout>
</LinearLayout>
