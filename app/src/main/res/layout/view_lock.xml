<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lock_left_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >

        <ImageView
            android:id="@+id/home_announcement_lock_bg"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_lock" />

        <ImageView
            android:id="@+id/home_announcement_lock_circle"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/key_loading_25"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/home_announcement_lock_status"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_state_one" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/lock_right_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_gravity="center_vertical"/>
</LinearLayout>
