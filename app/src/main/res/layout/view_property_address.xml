<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mine_account_property_rl"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/property_icon_img"
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_property" />

        <TextView
            android:id="@+id/property_icon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/property_icon_img"
            android:text="@string/current_property"
            android:textColor="@color/color_mine_txt"
            android:textSize="@dimen/font_16" />

        <RelativeLayout
            android:id="@+id/property_change_arrow_rl"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@color/main_bg">

            <ImageView
                android:id="@+id/property_change_arrow_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_change_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/property_change_arrow_rl"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            android:text="@string/change_address"
            android:textColor="#d5d5d5"
            android:textSize="@dimen/font_10"
            />

        <TextView
            android:id="@+id/property_address_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/property_change_arrow_rl"
            android:layout_toRightOf="@id/property_icon_tv"
            android:ellipsize="end"
            android:gravity="right"
            android:lineSpacingExtra="5dp"
            tools:text="天津市南开街道南开小区\n9号楼3单元402"
            android:textColor="#838383"
            android:textSize="@dimen/font_13" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/property_address_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>
