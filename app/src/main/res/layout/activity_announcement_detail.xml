<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.iot12369.easylifeandroid.ui.view.WithBackTitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/announcement_item_des_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            tools:text="望广大小区物业尽快缴存物业费、车位费" />

        <TextView
            android:id="@+id/announcement_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:textColor="@color/colorMaintainNum"
            android:textSize="@dimen/font_14"
            tools:text="2017-10-02 20:32:57" />

        <!--<TextView-->
        <!--android:id="@+id/text_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingBottom="10dp"-->
        <!--android:paddingLeft="16dp"-->
        <!--android:paddingRight="16dp"-->
        <!--android:paddingTop="10dp"-->
        <!--android:text="@string/sssssss"-->
        <!--android:textColor="@color/colorLoginTxt"-->
        <!--android:textSize="@dimen/font_16" />-->
        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_announcement" />
</RelativeLayout>
