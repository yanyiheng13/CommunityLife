<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent">

    <!--开锁弹窗界面的广告-->
    <ImageView
        android:id="@+id/img_unlock_ad"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_banner"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/ll_unlock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/img_unlock_ad"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_community_door"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_community_door"/>
            <TextView
                android:id="@+id/tv_community_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="@string/app_name"
                android:textColor="#333333"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_unit_door"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_unit_door"/>
            <TextView
                android:id="@+id/tv_unit_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                tools:text="@string/app_name"
                android:textColor="#333333"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_unlock_cancel"
        android:layout_below="@id/ll_unlock"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"/>
</RelativeLayout>
