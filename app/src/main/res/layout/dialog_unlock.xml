<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">
    <!--开锁弹窗界面的广告-->
    <ImageView
        android:id="@+id/img_unlock_ad"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:background="@mipmap/bg_announcement"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/img_unlock_ad">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_community_door"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_community_door"/>
            <TextView
                android:id="@+id/tv_community_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/app_name"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_unit_door"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/btn_unit_door"/>
            <TextView
                android:id="@+id/tv_unit_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/app_name"
                android:textSize="@dimen/font_12"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
