<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white">

    <com.iot12369.easylifeandroid.ui.view.WithBackTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/white">

                <ImageView
                    android:id="@+id/certification_head_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:src="@mipmap/icon_head_default" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="50dp"
                    android:layout_toLeftOf="@id/certification_head_img"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/certification_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="大卫"
                            android:textColor="@color/colorCertification"
                            android:textSize="@dimen/font_17" />

                        <ImageView
                            android:id="@+id/certification_level_img"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="6dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/icon_level_two" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/certification_address_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="天津市天津南开区\n南开小区"
                        android:textColor="@color/colorLoginTxt"
                        android:textSize="@dimen/font_16" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"/>
            <LinearLayout
                android:id="@+id/certification_phone_num_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_phone_light" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text="@string/phone_num_txt"
                    android:textColor="@color/colorCertification"
                    android:textSize="@dimen/font_16" />
                <TextView
                    android:id="@+id/certification_phone_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:gravity="right"
                    android:text="@string/phone_num"
                    android:layout_marginRight="16dp"
                    android:textColor="@color/colorCertification"
                    android:textSize="@dimen/font_16" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"/>
            <RelativeLayout
                android:id="@+id/certification_wechat_rl"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/certification_wechat_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="@string/wechat_num_txt"
                    android:layout_toRightOf="@id/certification_wechat_img"
                    android:textColor="@color/colorCertification"
                    android:textSize="@dimen/font_16" />
                <ImageView
                    android:id="@+id/certification_wechat_status_img"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_not_bind"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                     />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"/>
            <com.iot12369.easylifeandroid.ui.view.PropertyAddressView
                android:id="@+id/certification_address_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
            </com.iot12369.easylifeandroid.ui.view.PropertyAddressView>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/main_bg"/>
            <TextView
                android:id="@+id/certification_add_address_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_wechat_login"
                android:textSize="@dimen/font_20"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@android:color/white"
                android:layout_marginTop="50dp"
                android:text="@string/add_address"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
