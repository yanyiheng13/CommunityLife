<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_transaction_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/transaction_top_gap_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#82b1ff">

        <TextView
            android:id="@+id/transaction_item_order_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            tools:text="@string/maintain_order_number" />
        <ImageView
            android:id="@+id/img_pay_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/transaction_item_order_tv"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/transaction_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            tools:text="@string/maintain_date" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/transaction_money"
            android:textColor="#A1A1A1"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/transaction_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/font_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/money_name"
            android:textColor="#A1A1A1"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/transaction_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:textColor="#A1A1A1"
            android:textSize="@dimen/font_16" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/tv_address_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/property_amount"
            android:textColor="#A1A1A1"
            android:textSize="@dimen/font_16" />

        <TextView
            android:id="@+id/transaction_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:textColor="#A1A1A1"
            android:layout_toRightOf="@id/tv_address_left"
            android:textSize="@dimen/font_16" />
    </RelativeLayout>
</LinearLayout>
