<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg">

    <com.iot12369.easylifeandroid.ui.view.WithBackTitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_address_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/add_name"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16"
                android:minEms="4"/>
            <ImageView
                android:id="@+id/add_address_name_right"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_red_dot"
                android:layout_alignParentRight="true"
                />
            <EditText
                android:id="@+id/add_address_name_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/add_address_name_right"
                android:paddingRight="10dp"
                android:background="@drawable/border_bg"
                android:layout_toRightOf="@id/add_address_name_left"
                android:lines="1"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_address_num_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/certification_num"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16"
                android:minEms="4"/>
            <ImageView
                android:id="@+id/add_address_num_right"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_red_dot"
                android:layout_alignParentRight="true"
                />
            <EditText
                android:id="@+id/add_address_num_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/add_address_num_right"
                android:paddingRight="10dp"
                android:background="@drawable/border_bg"
                android:layout_toRightOf="@id/add_address_num_left"
                android:lines="1"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_address_tel_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/te_num"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16"
                android:minEms="4"/>
            <ImageView
                android:id="@+id/add_address_tel_right"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_red_dot"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/add_address_tel_tv"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/add_address_tel_right"
                android:paddingRight="10dp"
                android:background="@drawable/border_bg"
                android:layout_toRightOf="@id/add_address_tel_left"
                android:lines="1"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_address_my_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text="@string/my_address"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16"
                android:minEms="4"/>
            <ImageView
                android:id="@+id/add_address_my_right"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_red_dot"
                android:layout_alignParentRight="true"
                />
            <EditText
                android:id="@+id/add_address_my_et"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/add_address_my_right"
                android:paddingRight="10dp"
                android:background="@drawable/border_bg"
                android:layout_toRightOf="@id/add_address_my_left"
                android:textColor="@color/colorCertification"
                android:textSize="@dimen/font_16" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/add_address_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_wechat_login"
        android:textSize="@dimen/font_20"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:text="@string/submit_info"
        />
</LinearLayout>
